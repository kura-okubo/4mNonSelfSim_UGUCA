# geometry and discretization
length = 1.
nb_elements = 1024

# external loading
shear_load_rate = 1e10 # way too fast, just illustration
normal_load = -5e6

# top material properties
material top [
  E = 7e9
  nu = 0.33
  rho = 2000
]

# interface properties
interface friction [
  mus = 0.8
  muk = 0.2
  dc = 1e-5
  mus_ampl = 0.15
]

# nucleation
a0 = 0.05

# duration and time stepping
duration = 2.3e-4
tsf = 0.4 # time step factor

# quasi-dynamic: no real computational gain here - just for demonstration
dyn_velo_threshold = 1

# dumping
dump_fields = cohesion_0,top_disp_0,top_velo_0,mu_s
nb_dumps = 200
